<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/fondo_radio_noticias"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="10">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight=".75"
            android:weightSum="10">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="9"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cargando Programa..."
                    android:gravity="center"
                    android:textSize="20dp"
                    android:id="@+id/textView"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:textColor="#FFF"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:weightSum="10">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="9"
                    android:gravity="center">

                    <SurfaceView
                        android:id="@+id/surfView"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:weightSum="10">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:id="@+id/imageView"
                            android:src="@drawable/radio_noticias_imagen"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="9"
                        android:weightSum="10">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="4"></LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="2"
                            android:weightSum="10">

                            <ImageButton
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:id="@+id/imageButton"
                                android:layout_centerHorizontal="true"
                                android:layout_weight="4.5" />

                            <ImageView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:id="@+id/imageView2"
                                android:src="@drawable/icono_volumen"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:layout_weight="4.5" />

                            <SeekBar
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:id="@+id/seekBar"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentEnd="true"
                                android:layout_below="@+id/imageButton"
                                android:layout_toRightOf="@+id/imageView2"
                                android:layout_toEndOf="@+id/imageView2"
                                android:layout_weight="1" />

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="4"></LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            style="@android:style/ButtonBar"
            android:id="@+id/footer"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:background="#fd000000"
            android:weightSum="1"
            android:layout_weight="9.25" >

            <Button
                android:id="@+id/button7"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:background="#fd000000"
                android:layout_weight="0.39" />

            <Button
                android:id="@+id/btnInicio"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:background="@drawable/inicio_btnx" />

            <Button
                android:id="@+id/button9"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:background="#fd000000"
                android:layout_weight="0.14" />

            <Button
                android:id="@+id/btnMenu"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/menu_btnx" />

            <Button
                android:id="@+id/button11"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="#fd000000"
                android:layout_weight="0.15" />

            <Button
                android:id="@+id/btnProgramacion"
                android:layout_width="75dp"
                android:layout_height="35dp"
                android:background="@drawable/prgn_btnx" />

            <Button
                android:id="@+id/button13"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="#fd000000" />

            <Button
                android:id="@+id/button14"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:background="#fd000000" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>